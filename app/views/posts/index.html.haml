.row
  .col-md-8.offset-md-2
    - @posts.each do |post|
      %section
        .post-head.clearfix.otstup
        %h2.nav-link
          = link_to post.user.username, user_path(post.user_id), class:"active"
        = link_to (image_tag post.image.url(:large), class:'thumb' if post.image?), post_path(post)
        .cccenter
          =link_to like_post_path(post), method: :put, class:"" do
            %span.fa.fa-heart-o
              =post.get_upvotes.size
          = link_to 'Изменить', edit_post_path(post), class:""
          = link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Вы уверены?' }
          %time
            = post.created_at.to_date.strftime("%d %B, %Y")