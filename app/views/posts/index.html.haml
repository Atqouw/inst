.row
  .col-md-8.offset-md-2
    - @posts.each do |post|
      %section
        .post-head.clearfix.otstup
        %h2.nav-link
          = link_to post.user.username, post_path(post), class:"active"

        = image_tag post.image.url(:large), class:'thumb' if post.image?
        .sprava
          = link_to 'Изменить', edit_post_path(post)
          = link_to 'Удалить', post_path(post), method: :delete, data: { confirm: 'Вы уверены?' }
          %time
            = post.created_at.to_date.strftime("%d %B, %Y")